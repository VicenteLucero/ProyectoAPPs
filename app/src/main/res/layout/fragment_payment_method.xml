<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="fragments.Payment_method" android:background="#FFFFFF">
    <ListView
            android:layout_width="224dp"
            android:layout_height="324dp"
            android:id="@+id/paymentsListView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.452" android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/payment_fragment_title"
            android:layout_width="196dp"
            android:layout_height="29dp"
            android:id="@+id/title"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.057" android:textSize="20sp"
            android:textStyle="bold"/>
    <Button
            android:text="@string/add_payment_method"
            android:layout_width="186dp"
            android:layout_height="55dp"
            android:id="@+id/addButton"
            android:layout_marginStart="92dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/paymentsListView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.081"/>
</android.support.constraint.ConstraintLayout>
